# Runtime image for Snake Game Service
FROM alpine:latest

# Install ca-certificates for HTTPS requests
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Create bin directory
RUN mkdir -p ./bin

# Copy pre-built game binary
COPY bin/game_server ./bin/game_server

# Make binary executable
RUN chmod +x ./bin/*

# Expose port
EXPOSE 50055

CMD ["./bin/game_server"]