# Runtime image for Snake Game Matching Service
FROM alpine:latest

# Install ca-certificates for HTTPS requests
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Create bin directory
RUN mkdir -p ./bin

# Copy pre-built matching binary
COPY bin/matching_server ./bin/matching_server

# Make binary executable
RUN chmod +x ./bin/*

# Expose port
EXPOSE 50052

CMD ["./bin/matching_server"]