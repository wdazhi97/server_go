# Runtime image for Snake Game Leaderboard Service
FROM alpine:latest

# Install ca-certificates for HTTPS requests
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Create bin directory
RUN mkdir -p ./bin

# Copy pre-built leaderboard binary
COPY bin/leaderboard_server ./bin/leaderboard_server

# Make binary executable
RUN chmod +x ./bin/*

# Expose port
EXPOSE 50054

CMD ["./bin/leaderboard_server"]