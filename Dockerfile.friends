# Runtime image for Snake Game Friends Service
FROM alpine:latest

# Install ca-certificates for HTTPS requests
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Create bin directory
RUN mkdir -p ./bin

# Copy pre-built friends binary
COPY bin/friends_server ./bin/friends_server

# Make binary executable
RUN chmod +x ./bin/*

# Expose port
EXPOSE 50056

CMD ["./bin/friends_server"]