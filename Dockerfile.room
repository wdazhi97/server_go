# Runtime image for Snake Game Room Service
FROM alpine:latest

# Install ca-certificates for HTTPS requests
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Create bin directory
RUN mkdir -p ./bin

# Copy pre-built room binary
COPY bin/room_server ./bin/room_server

# Make binary executable
RUN chmod +x ./bin/*

# Expose port
EXPOSE 50053

CMD ["./bin/room_server"]